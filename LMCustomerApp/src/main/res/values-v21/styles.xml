<resources>
    <!-- Base application theme. -->
    <style name="LastMileAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/concrete</item>
        <item name="android:checkboxStyle">@style/CheckBox</item>
        <item name="checkboxStyle">@style/CheckBox</item>
        <item name="android:radioButtonStyle">@style/RadioButton</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
        <item name="colorControlActivated">@color/concrete</item>
        <item name="android:windowTitleSize">@dimen/text_size_3</item>
        <item name="android:titleTextStyle">@style/CheckBoxTextStyle</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:fontFamily">@string/font_family_sans_serif</item>
